{
  "extends": ["config:base"],
  "labels": ["dependencies"],
  "timezone": "UTC",
  "prConcurrentLimit": 6,
  "rangeStrategy": "bump",
  "ignorePaths": [
    "**/dist/**",
    "apps/**/prisma/migrations/**"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "automerge: minor & patch"
    },
    {
      "matchPackagePatterns": ["^@nrwl/", "^nx", "^@nrwl"],
      "groupName": "nx & nrwl"
    },
    {
      "matchPackagePrefixes": ["@nestjs/"],
      "groupName": "nestjs packages"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "github-actions",
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
